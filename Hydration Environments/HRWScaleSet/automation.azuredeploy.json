{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "automationAccountName": {
            "type": "string",
            "metadata": {
                "description": "The name of the Azure Automation Account to be deployed."
            }
        },
        "location": {
            "type": "string",
            "metadata": {
                "description": "The location to deploy this Automation Account to."
            }
        },
        "tags": {
            "type": "object",
            "metadata": {
                "description": "The tags to add to the Automation Account."
            }
        }
    },
    "variables": {
        "artifacts": {
            "baseURL": "https://raw.githubusercontent.com/bebattis/AzureRamps/master/Hydration%20Environments/HRWScaleSet/",
            "accountURL": "[concat(variables('artifacts').baseURL,'automationAccount.json')]",
            "tagsURL": "[concat(variables('artifacts').baseURL,'automationTags.json')]",
            "omsURL": "[concat(variables('artifacts').baseURL,'automationOMS.json')]"
        }
    },
    "resources": [
        {
            "apiVersion": "2017-05-10",
            "name": "accountTemplate",
            "type": "Microsoft.Resource/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('artifacts').accountURL]"
                },
                "parameters": {
                    "automationAccountName": "[parameters('automationAccountName')]",
                    "location": "[parameters('location')]"
                }
            }
        },
        {
            "apiVersion": "2017-05-10",
            "name": "tagsTemplate",
            "type": "Microsoft.Resource/deployments",
            "dependsOn": [
                "AccountTemplate"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('artifacts').tagsURL]"
                },
                "parameters": {
                    "automationAccountName": "[parameters('automationAccountName')]",
                    "location": "[parameters('location')]",
                    "tags": "[parameters('tags')]",
                    "creationTime": "[reference('accountTemplate').outputs.creationTime.value]"
                }
            }
        }
    ],
    "outputs": {}
}